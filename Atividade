//Q5
var Valordoproduto = 200
var Porcentagem = 23
var Valordodesconto
var novovalor
Valordodesconto = (Valordoproduto*Porcentagem)/100
novovalor = (Valordoproduto - Valordodesconto)
console.log ("O valor original é", Valordoproduto,"com o desconto de",Porcentagem,"%, o novo valor é de", novovalor,", uma economia de ",Valordodesconto,"reais.")

